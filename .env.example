# EduTrack - Student Attendance & Management System
# Environment Variables Configuration
# Copy this file to .env and fill in your values

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Application Environment
# Values: development, production, staging
NODE_ENV=development

# Server Port
# Default: 5000
PORT=5000

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# MongoDB Connection String
# Local: mongodb://localhost:27017/edutrack
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/edutrack
MONGO_URI=mongodb://localhost:27017/edutrack

# Database Name (optional, defaults to last part of URI)
DB_NAME=edutrack

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================

# JWT Secret Key
# Use a strong, random string for production
# Generate with: openssl rand -base64 32
# Minimum recommended length: 32 characters
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# JWT Expiration Time
# Examples: 1h, 7d, 30d
JWT_EXPIRE=7d

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================

# Email Service Provider
# Options: gmail, sendgrid, mailgun, etc.
EMAIL_SERVICE=gmail

# Email Username
EMAIL_USER=your_email@gmail.com

# Email Password / API Key
EMAIL_PASSWORD=your_app_password

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# ==========================================
# LOGGING
# ==========================================

# Logging Level
# Options: debug, info, warning, error
LOG_LEVEL=info

# ==========================================
# CORS SETTINGS
# ==========================================

# Allow credentials in CORS
ALLOW_CREDENTIALS=true

# ==========================================
# NOTES
# ==========================================
# - Never commit the .env file to version control
# - Keep all secrets secure and use strong passwords
# - For production, use environment variables from your hosting platform
# - Rotate secrets regularly

